rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // הגדרת חוקים ספציפית לתיקיית תמונות הפרופיל
    match /profile-pictures/{userId}/{allPaths=**} {
      // הרשאת קריאה: מאפשר לכל אחד לראות את תמונות הפרופיל
      allow read;
      // הרשאת כתיבה (העלאה, עדכון, מחיקה) ניתנת רק בתנאים הבאים:
      allow write: if request.auth != null &&                   // 1. המשתמש חייב להיות מחובר
                      request.auth.uid == userId &&              // 2. המשתמש יכול לכתוב רק לנתיב שלו
                      request.resource.contentType.matches('image/.*') && // 3. הקובץ חייב להיות תמונה
                      request.resource.size < 5 * 1024 * 1024;   // 4. גודל התמונה קטן מ-5MB
    }
    
    // כלל נוסף לתמונות פרופיל ישירות (בלי תיקייה נוספת)
    match /profile-pictures/{userId} {
      allow read;
      allow write: if request.auth != null &&
                      request.auth.uid == userId &&
                      request.resource.contentType.matches('image/.*') &&
                      request.resource.size < 5 * 1024 * 1024;
    }
  }
}
